<% layout('layouts/boilerplate') -%>

<body>
  <a href="/admitted/add">
    <button class="btn btn-success mb-2">Admit+</button>
  </a>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Room Name</th>
        <th scope="col">Patient ID</th>
        <th scope="col">Status</th>
        <th scope="col">Check In</th>
        <th scope="col">Check Out</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      <% for(admit of admitted) { %>
      <tr>
        <td><%= admit.RoomName %></td>
        <td><%= admit.Patient_ID %></td>
        <td><%= admit.Status %></td>
        <td><%=admit.CheckIn.toString().split(" ").slice(0,4).join(" ")%></td>
        <td><%=admit.CheckOut.toString().split(" ").slice(0,4).join(" ")%></td>

        <td>
          <form
            action="/admitted/<%= admit.RoomName %>?_method=DELETE"
            method="POST"
          >
            <button class="btn btn-secondary p-1">Delete</button>
          </form>
        </td>
      </tr>
      <% } %>
    </tbody>
  </table>
</body>
